{
  "compilerOptions": {
    "target": "ES2020", // Compatible with most Node versions
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist", // optional: for transpiling output
    "allowJs": true,
    "types": ["node"]
  },
  "include": ["server/**/*", "src/types/**/*"]
}
